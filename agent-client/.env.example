# Azure AI Foundry Configuration
# Copy this file to .env and fill in your values

# Foundry Resource Name (the part before .services.ai.azure.com)
# Example: sansri-foundry-hosted-agents-pro
FOUNDRY_RESOURCE_NAME=your-foundry-resource-name

# Foundry Project Name
# Example: sansri-foundry-hosted-agents-project
PROJECT_NAME=your-project-name

# Agent Names
# ----------------------------------------------------------
# For PROJECT endpoint clients (foundry-agent-client-sdk.py, foundry-agent-http-client.py):
# This is the agent name as shown in Foundry Agent Builder
AGENT_NAME=multichannel-travel-agent

# For APPLICATIONS endpoint clients (foundry-agent-app-sdk-client.py, foundry-agent-app-http-client.py):
# This is the PUBLISHED application name (may be different from agent name)
APP_NAME=multichannel-travel-agent

# Streaming Mode (optional, defaults to true)
# Set to "false" to test non-streaming mode
USE_STREAMING=true
